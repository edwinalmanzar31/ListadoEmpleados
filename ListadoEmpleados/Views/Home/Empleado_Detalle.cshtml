@model ListadoEmpleados.Models.ViewModels.EmpleadoVM;
@{
    ViewData["Title"] = "Crear nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.oEmpleado.IdEmpleado == 0)
{
    //Crear empleado
    <h1>Crear nuevo empleado</h1>
}
else
{
    //Editar empleado
    <h1>Editar empleado</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Empleado_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oEmpleado.IdEmpleado" />

            <div class="mb-2">
                <label class="form-label" asp-for="oEmpleado.NombreCompleto">Nombre Completo</label>
                <input class="form-control form-control-sm" asp-for="oEmpleado.NombreCompleto" type="text" required />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oEmpleado.Correo">Correo</label>
                <input class="form-control form-control-sm" asp-for="oEmpleado.Correo" type="text" required  />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oEmpleado.Telefono">Teléfono</label>
                <input class="form-control form-control-sm" asp-for="oEmpleado.Telefono" type="text" required />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="oEmpleado.IdCargo">Cargo</label>
                <select required class="form-select form-select-sm" asp-for="oEmpleado.IdCargo" asp-items="@Model.oListaCargo">

                </select>
            </div>

            <div class="mb-2">
                @if (Model.oEmpleado.IdEmpleado == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Editar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home" asp-route-idEmpleado="0">Volver</a>
            </div>
        </form>
    </div>
</div>
